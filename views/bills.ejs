                function shortenBillName(billName) {
                    var spaces = 0;
                    var index = 0;
                    var shortenedName = ' ';
                    while (billName.charAt(index)) {
                        if (billName.charAt(index) == ' ') {
                            spaces += 1;
                        }
                        if (spaces >= 5) {
                            return shortenedName;
                            // return shortenedName + '...';
                        }
                        shortenedName += billName.charAt(index);
                        index += 1;
                    }
                    return shortenedName;
                }

